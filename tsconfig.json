{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es5", "es6", "ES2018", "dom"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "ts-node": {
        "files": true
    }
}
