{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "lib": ["dom"],
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "strictNullChecks": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "swc": true,
        "esm": true,
        "transpileOnly": true
    },
    "include": ["./src/**/*"],
}
